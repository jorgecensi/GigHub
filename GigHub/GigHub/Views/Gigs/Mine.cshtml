@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcommimg Gigs</h2>

<ul class="gigs voffset4">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Venue
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit","Gigs",new { id = gig.Id})">
                        Edit
                    </a>|
                    <a href="#" class="js-cancel-gig"  data-gig-id="@gig.Id">
                        Cancel
                    </a>
                </div>

            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function(){
            $(".js-cancel-gig").click(function (e) {
                var link = $(e.target);                



                bootbox.confirm({
                    message: "Are you sure you want to cancel this gig?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-default'
                        }
                    },
                    callback: function (result) {
                        $.ajax({
                            url: "/api/gigs/" + link.attr("data-gig-id"),
                            method: "DELETE"
                        })
                            .done(function () {
                                link.parents("li").fadeOut(function () {
                                    $(this).remove();
                                });
                            })
                            .fail(function () {
                                alert("Something is failed!");
                            });
                    }
                });
       
            });
        });
    </script>    
}